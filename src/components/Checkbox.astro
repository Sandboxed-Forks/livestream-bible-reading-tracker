---
import type { Reading } from "../pages/index.astro";

type Props = {
  reading: Reading;
};

const { reading } = Astro.props;

const processedDate = new Date(reading.date);
---

<div class="grid gap-2 border-2 p-4 rounded-md">
  <time
    class="font-bold text-lg leading-none"
    datetime={processedDate.toISOString()}
    >{
      processedDate.toLocaleDateString(undefined, {
        dateStyle: "medium",
      })
    }</time
  >
  <div class="flex gap-1 relative max-w-fit">
    <input
      type="checkbox"
      name={reading.id.toString()}
      id={reading.id.toString()}
      class="absolute inset-0 cursor-pointer peer focus:outline-none opacity-0"
      checked={reading.checked}
    />
    <div
      class="size-6 border-2 rounded-md border-blue-500 peer-checked:bg-blue-500 grid place-items-center text-white peer-hover:ring-4 peer-focus-visible:ring-4 transition-shadow"
    >
      <svg
        width="20"
        height="20"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        ><g fill="none" fill-rule="evenodd"
          ><path
            d="M24 0v24H0V0zM12.594 23.258l-.012.002l-.071.035l-.02.004l-.014-.004l-.071-.036c-.01-.003-.019 0-.024.006l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427c-.002-.01-.009-.017-.016-.018m.264-.113l-.014.002l-.184.093l-.01.01l-.003.011l.018.43l.005.012l.008.008l.201.092c.012.004.023 0 .029-.008l.004-.014l-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014l-.034.614c0 .012.007.02.017.024l.015-.002l.201-.093l.01-.008l.003-.011l.018-.43l-.003-.012l-.01-.01z"
          ></path><path
            fill="currentColor"
            d="M19.495 3.133a1 1 0 0 1 1.352.309l.99 1.51a1 1 0 0 1-.155 1.279l-.003.004l-.014.013l-.057.053l-.225.215a83.86 83.86 0 0 0-3.62 3.736c-2.197 2.416-4.806 5.578-6.562 8.646c-.49.856-1.687 1.04-2.397.301l-6.485-6.738a1 1 0 0 1 .051-1.436l1.96-1.768A1 1 0 0 1 5.6 9.2l3.309 2.481c5.169-5.097 8.1-7.053 10.586-8.548"
          ></path></g
        ></svg
      >
    </div>
    <label for={reading.id.toString()}>{reading.passage}</label>
  </div>
</div>
